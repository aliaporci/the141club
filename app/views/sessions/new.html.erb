<h1>Sign In</h1>

<div class="col-sm-4 col-md-4 col-lg-4">
  <%= form_tag do %>

  <div class="form-group">
    <%= label_tag :login %>
    <%= text_field_tag :login, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary" %> or <%= link_to "Join the Club", sign_up_path %>
  </div>

  <% end %>
  <% if alert %>
  <div class="alert alert-danger">
    <%= alert %>
  </div>
  <% end %>
</div>
